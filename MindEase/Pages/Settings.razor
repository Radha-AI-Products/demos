@page "/settings"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
    <MudStack Spacing="3">
        <!-- Header -->
        <MudStack Spacing="1">
            <MudText Typo="Typo.h4">Settings</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Adjust your MindEase experience to feel just right for you.
            </MudText>
        </MudStack>

        <!-- Profile summary card -->
        <MudCard Class="settings-card">
            <MudCardContent>
                <MudStack Row="true" Spacing="3" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudAvatar Size="Size.Large">
                            <MudImage Src="https://placehold.co/80x80?text=ME" />
                        </MudAvatar>
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.subtitle1">Alex Johnson</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">alex.johnson@example.com</MudText>
                        </MudStack>
                    </MudStack>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Edit">
                        Edit
                    </MudButton>
                </MudStack>
            </MudCardContent>
        </MudCard>

        <!-- Account section -->
        <MudStack Spacing="1">
            <MudText Typo="Typo.subtitle1">Account</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Manage your account details and data.
            </MudText>
        </MudStack>

        <MudStack Spacing="2">
            <MudCard Class="settings-card list-card" @onclick="OnProfileClick">
                <MudCardContent>
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Profile</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Update your personal information.</MudText>
                        </MudStack>
                        <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Color="Color.Secondary" />
                    </MudStack>
                </MudCardContent>
            </MudCard>

            <MudCard Class="settings-card list-card" @onclick="OnPrivacyClick">
                <MudCardContent>
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Privacy</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Control what you share with MindEase.</MudText>
                        </MudStack>
                        <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Color="Color.Secondary" />
                    </MudStack>
                </MudCardContent>
            </MudCard>

            <MudCard Class="settings-card list-card" @onclick="OnExportDataClick">
                <MudCardContent>
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Export Data</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Download a copy of your data anytime.</MudText>
                        </MudStack>
                        <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Color="Color.Secondary" />
                    </MudStack>
                </MudCardContent>
            </MudCard>
        </MudStack>

        <!-- Preferences section -->
        <MudStack Spacing="1" Class="mt-4">
            <MudText Typo="Typo.subtitle1">Preferences</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Choose how MindEase interacts with you. These toggles are visual only.
            </MudText>
        </MudStack>

        <MudCard Class="settings-card">
            <MudCardContent>
                <MudStack Spacing="3">
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Notifications</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Reminders for check-ins and sessions.</MudText>
                        </MudStack>
                        <MudSwitch T="bool" @bind-Value="notifications" Color="Color.Primary" />
                    </MudStack>

                    <MudDivider />

                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Dark Mode</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Visual toggle only in this demo.</MudText>
                        </MudStack>
                        <MudSwitch T="bool" @bind-Value="darkMode" Color="Color.Primary" />
                    </MudStack>

                    <MudDivider />

                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1">Sounds</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">Subtle chimes and guidance audio.</MudText>
                        </MudStack>
                        <MudSwitch T="bool" @bind-Value="sounds" Color="Color.Primary" />
                    </MudStack>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudStack>
</MudContainer>

@code {
    private bool notifications = true;
    private bool darkMode = false;
    private bool sounds = true;

    private void OnProfileClick() { }
    private void OnPrivacyClick() { }
    private void OnExportDataClick() { }
}
